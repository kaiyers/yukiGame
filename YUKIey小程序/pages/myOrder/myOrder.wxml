<wxs module="m1">
  var dealString = function(s){
    var asting=(s/100).toFixed(2)
    return asting
  }
  module.exports.dealString = dealString;
</wxs>
<wxs module="m3">
  var dealString = function(s){
    var asting=s.toFixed(2)
    return asting
  }
  module.exports.dealString = dealString;
</wxs>
<wxs module="m2">
  var getString = function(s){
    var asting=s.join(' 、')
    return asting
  }
  module.exports.getString = getString;
</wxs>
