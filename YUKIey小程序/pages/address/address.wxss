/* pages/address/address.wxss */
page {  
  display: block;  
  min-height: 100%;  
  background-color: #f0f0f0;  
}  
.colourBar{
  position: absolute;
  top:0;
  width:100%;
  height:10rpx;
}
.uinfo{
  padding: 5px 10px 2px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.add{
  padding: 2px 10px;
  font-size: 16px;
  color: #666;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2; /*行数*/
  -webkit-box-orient: vertical;
}
.addressInfo{
  margin-top:10rpx;
}
.saddress{
  background: #fff;
  margin-bottom: 20rpx;
}
.flexs{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.del{
  margin-left: 8px;
}
.operation{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 5px 10px;
  border-top: 1px solid #f0f0f0
}
.operation .text{
  font-size:16px;
}
.addicon{
  width:20px; 
  height: 20px;
  margin-right: 3px
}
.foot{
  position: fixed;
  background: #f0f0f0;
  bottom:0;
  width:100%;
  height:100rpx;
}
.diandi{
  width:100%;
  height:100rpx;
  background: #f0f0f0;  
}
.play{
  background: #4595e5;
  color:#fff;
  width:90%;
  line-height: 2;
  margin-top: 15rpx
}