/* pages/alterAddress/alterAddress.wxss */
page {  
  display: block;  
  min-height: 100%;  
  background-color: #f0f0f0;  
}  
.form-box{
    padding-left: 30rpx;
    background: #fff;
}
.form-box input{
    height: 90rpx;
    border-bottom: 1rpx solid #ededed;
}
.form-box textarea{
  width:100%;
  padding-top: 20rpx;
  height:200rpx;
}
.form-box .input-placeholder{
    color: #aaa;
}
.foot{
  position: fixed;
  background: #f0f0f0;
  bottom:0;
  width:100%;
  height:100rpx;
}
.moren{
  padding:10rpx 30rpx;
  background: #fff;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.morentext{
  font-size: 16px;
}
.saveAddress{
  background: #4595e5;
  color:#fff;
  width:90%;
  line-height: 2;
  margin-top: 15rpx
}

/* directory.wxss */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 8;
  background: rgba(0, 0, 0, 0.3);
}

.state-item {
  width: 20%;
  height: 70rpx;
  font-size: 11pt;
  line-height: 70rpx;
  text-align: center;
  border-radius: 10rpx;
  border: 2rpx solid #ddd;
}

.border.state-item {
  border: 2rpx solid #c4245c;
}

.date {
  min-width: 40%;
  display: flex;
  font-size: 11pt;
  color: #bdbdbd;
  align-items: center;
}

.date-btn {
  min-width: 80%;
  font-size: 12pt;
  background-color: #c4245c;
  color: #fff;
  position: fixed
}


.picker-view {
  width: 100%;
  display: flex;
  z-index:12;
  background-color: #fff;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  height: 40vh;
}

.picker-item {
  line-height: 70rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  text-align: center;
}