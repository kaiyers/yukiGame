<!--pages/changePhone/changePhone.wxml-->
 <view class="main" wx:if="{{verifyShow}}">
  <view class="explain">请输入原来的手机号码以完成验证</view>
  <input class="input division" placeholder="{{oldphone}}" disabled="disabled" type='text'></input>
  <input bindinput="inputChange" class="input" placeholder="请输入手机号"></input>
  <button bindtap="verify" class="primary"> 验证 </button>
</view> 

<view class="main" wx:else>
  <view class="explain">请输入新手机号码，我们会发送验证码到新手机上</view>
  <view class="yamz">
    <input bindinput="newPhone" class="input input1" placeholder="请输入手机号"></input>
    <view class="jia" wx:if="{{btnvfShow}}">获取验证码</view>
    <button type="primary" class='getverify' bindtap='getverify' disabled="{{disabled}}" wx:else>{{countdowns}}{{btnText}}</button>
  </view>
  <input bindinput="verification" class="input" placeholder="验证码"></input>
  <button bindtap="pinless" class="primary"> 绑定 </button>
</view>
