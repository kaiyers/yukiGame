/* pages/details/details.wxss */
page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.contentdet{
  height:100vh;
  width:100vw;
  overflow: hidden;
}
/* 直接设置swiper属性 */
swiper {
  height: 630rpx;
  position: relative;
}
swiper-item image {
  width: 100%;
  height: 100%;
}
.detail {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  margin-bottom: 0rpx;
}
.detail .title {
  font-size: 35rpx;
  color: black;
  text-align: left;
  margin: 10rpx 10rpx 10rpx 30rpx;
}
.detail .price {
  color: red;
  font-size: 40rpx;
  margin-left: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center
}
.tag{
  padding:1px 4px;
  background: #4d80db;
  color:#fff;
  font-size: 12px;
  border-radius: 3px;
  margin-left: 8px
}
.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}
.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}
.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 200;
  width: 100%;
  height: 100rpx;
  border-top: 1px solid gainsboro
}
.button-buy {
  background-color: #fff; /* Green */
  color:#000;
}
.button-car {
  background-color: #4d80db; /* 红色 */
}
.image_detail {
  width: 100%;
}
button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
}
.detail-nav image {
  width: 90rpx;
  height: 50rpx;
  margin: 0 6px;
}
.line_nav {
  width: 5rpx;
  height: 100%;
  background-color: gainsboro;
}
/* 占位 */
.temp {
  height: 100rpx;
}
text {
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 10rpx;
}
.text-remark {
  display: block;
  font-size: 25rpx;
  margin: 10rpx;
}
.parting_line{height:10px;width:100%;background:#f0f0f0}
/* 遮罩 */
.mask{
  width:100%;
  height:100%;
  position:absolute;
  top:0;
  z-index: 99;
  background: rgba(0,0,0,0.5)
}
/* 弹窗 */
.popdown{
  display: none;
}
.popup{
  display: block;
  position: fixed;
  bottom:0;
  width:100%;
  z-index: 100;
  background: #fff;
  border-top: 1px solid #f0f0f0;
}
.popgoodsImg{
  position: absolute;
  top:-48rpx;
  width:200rpx;
  height:200rpx;
  background: #fff;
  left: 20rpx;
  border:1px solid #f0f0f0;
  overflow: hidden;
  border-radius: 25rpx;
  z-index: 105;
}
.popgoodsImg image{
  width:100%;
  height:100%;
}
.popInfo{
  margin: 10rpx 0 10rpx 240rpx;
}
.weui-media-box__title{
  width:450rpx;
  font-size: 16px
}
.popgoodsPri{
  font-size: 16px
}
.popgoodsStyle{
  font-size: 15px
}
.popclose{
  line-height: 50rpx;
  color: #fff;
  text-align: center;
  background: #666666;
  width:50rpx;
  height:50rpx;
  border-radius: 25rpx;
  position: absolute;
  top:5rpx;
  right: 10rpx;
}
.poplist{
  border-bottom: 1px solid #f0f0f0;
  padding: 15rpx;
}
.pophide{
  display: none;
}
.yangshi{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.yang{
  display: block;
  border:1px solid #666;
  color: #666;
  padding: 2px 8px;
  margin: 5px;
  border-radius: 5px
}
.yanged{
  display: block;
  border:1px solid #4d80db;
  color: #4d80db;
  padding: 2px 8px;
  margin: 5px;
  border-radius: 5px
}
/*主容器*/
.stepper {
  margin: 5px; 
  height: 26px; 
  /*给主容器设一个边框*/
  border: 1px solid #ccc; 
  border-radius: 3px; 
  width:100px; 
  display: flex;
  justify-content: flex-start;
  align-items: center;
} 
.skunum{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
/*加号和减号*/
.stepper text {
  height:26px; 
  width: 19px; 
  line-height: 26px; 
  text-align: center; 
} 
  
/*数值*/
.shuzhi {
  display: block; 
  width: 40px; 
  height: 26px;
  line-height: 26px; 
  margin: 0 auto; 
  text-align: center; 
  font-size: 12px; 
  /*给中间的input设置左右边框即可*/
  border-left: 1px solid #ccc; 
  border-right: 1px solid #ccc; 
} 
  
/*普通样式*/
.stepper .normal{ 
  color: black;
  height:26px; 
  width: 19px; 
  line-height: 26px; 
  text-align: center; 
} 
  
/*禁用样式*/
.stepper .disabled{ 
  color: #ccc; 
} 
.geshiA{
  width:100%;
  overflow: hidden;
  height:101rpx
}
.timebuy{
  position: absolute;
  z-index: 29;
  background: rgba(255,0,0,.7);
  width:96%;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:2%;
  left: 0;
  color:#fff;
  font-size: 16px;
}
.wxParse-p image{
  display: block;
}
.desctittle{
  padding:10rpx 30rpx;
  text-align: left;
  font-size: 16px;
}
.weui-cell{
  font-size: 16px;
}
button::after {
content:" ";
width:200%;
height:200%;
position:absolute;
top:0;
left:0;
border:1px solid rgba(0, 0, 0, 0.2);
-webkit-transform:scale(0.5);
transform:scale(0.5);
-webkit-transform-origin:0 0;
transform-origin:0 0;
box-sizing:border-box;
border-radius:0;
}
.comment_main{
  background: #fff;
  overflow: hidden;
}
.comment_main_header{
    height: 110rpx;
    line-height: 111rpx;
    font-weight: normal;
    margin-bottom: 10rpx;
}
.comment_main_header image{
  border-radius: 50%;
  width: 70rpx;
  height: 70rpx;
  margin-top:20rpx;
}
.comment_main_header span {
    display: inline-block;
    color: #999999;
    padding-left: 20rpx;
    font-size:26rpx;
    line-height: 111rpx;
}
span.comment_main_name{
    width: 110rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.comment_main_textsF{
    text-align: left;
    line-height: 42rpx;
    font-size: 27rpx;
}
.comment_main_textsST{
  color: #999;
  text-align: left;
  line-height: 42rpx;
  font-size: 27rpx;
}
.comment_main_textsSs{
  width: 150rpx;
  height: 150rpx;
  margin-right:10prpx;
}
.comment_main_textsSs image{
  display: inline-block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  vertical-align: middle;
  border: 0;
}
.modal-mask{
  width:100%;
  height:100%;
  position:absolute;
  top:0;
  z-index: 230;
  background: #000;
}
.modal-dialog{
  display: block;
  position: fixed;
  bottom:0;
  width:100%;
  height:700rpx;
  top:10%;
  z-index: 232;
}
.modal-dialog image{
  width:100%;
  height:100%;
}