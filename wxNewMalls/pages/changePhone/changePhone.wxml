<!--pages/changePhone/changePhone.wxml-->
<view class='ch-header'>
  <image src='../../img/newicon/phoneherder2.png'></image>
</view>
<view class='main'>
  <view class="{{btnvfShow ? 'getYan':'getYanH'}}" catchtap='getverify'>{{countdowns}}{{btnText}}</view>
  <input type='number' maxlength='11' class='inp' placeholder='请输入新的手机号' bindinput="newPhone"></input>
  <input type='text' class='inp1' placeholder='请输入验证码' bindinput="verification"></input>
  <view class='shuoming'>
    <view class="qiu"></view>
    <view class="wenzi">请确保你的手机畅通，以接收验证码短信。</view>
  </view>
  <view bindtap='pinless' class="{{btnvfShow ? 'tijiao':'tijiao-h'}}">完成</view>
</view>
 
