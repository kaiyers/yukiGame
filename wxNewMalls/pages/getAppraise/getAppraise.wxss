/* pages/getAppraise/getAppraise.wxss */
.swiper-tab {
  position:fixed;
  top:0;
  left:0;
  width: 100%;
  padding-left: 30rpx;
  padding-top: 30rpx;
  height: 210rpx;
  z-index: 99;
  background:#fff;
}
.swiper-tab-list {
  width: 26%;
  height: 70rpx;
  margin-right: 36rpx;
  margin-bottom: 36rpx;
  font-size: 34rpx;
  text-align: center;
  line-height: 70rpx;
  color: #000;
  background-color: #e5e5e5;
}
.swiper-tab-list.on{
  color: #fff;
  background: #4595e5;
}
.appraiseNew{
  margin-top:240rpx;
  height: 10rpx;
}
#appraise_deatil{
    padding: 0 32rpx;
    background: #fff;
}
.comment_main{
  padding: 0 30rpx;
  background: #fff;
  overflow: hidden;
}
.comment_main_header{
    height: 110rpx;
    line-height: 111rpx;
    font-weight: normal;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}
.comment_main_header image{
  border-radius: 50%;
  width: 70rpx;
  height: 70rpx;
  margin-top:20rpx;
}
.comment_main_header span {
    display: inline-block;
    color: #999999;
    padding-left: 20rpx;
    font-size:26rpx;
    line-height: 111rpx;
}
span.comment_main_name{
    width: 110rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.comment_main_textsF{
  text-align: left;
  line-height: 42rpx;
  font-size: 27rpx;
  word-break:break-all;
}
.comment_main_textsST{
  color: #999;
  text-align: left;
  line-height: 42rpx;
  font-size: 27rpx;
}
.comment_main_textsSs{
  width: 126rpx;
  height: 126rpx;
  margin-right:6rpx;
  margin-left:6rpx;
}
.comment_main_textsSs image{
  display: inline-block;
  width: 100%;
  height: 100%;
  vertical-align: middle;
  border: 0;
}
